{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",  // TS文件编译后会放入到此文件夹内
      "baseUrl": ".",
      "esModuleInterop": true,
      "typeRoots": [
        "node_modules/@types"
      ],
      "paths": {
        "@/*": ["src/*"]
      }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}